<div class="container">

  <% sandwiches.each do |sandwich| %>


    <div class="card">
      <div class="row no-gutters">

        <div class="col-md-4">
          <%= image_tag sandwich.main_image, width: "100%" %>
        </div>

        <div class="col-md-8">
          <div class="custom-title">
            <%= sandwich.title %>
          </div>
          <div class="card-text">
            <%= sandwich.description %>
          </div>
          <div class="custom-footer">
            Price: <%= sandwich.price %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
